/* miniprogram/pages/dashboard/dashboard.wxss */
.dashboard-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 20rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
}

.stats-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.stat-card {
  flex: 1;
  min-width: 200rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #07C160;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.add-btn {
  background: #07C160;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  line-height: 1;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.category-item:last-child {
  border-bottom: none;
}

.category-name {
  font-size: 28rpx;
  color: #333;
}

.category-amount {
  font-size: 28rpx;
  color: #07C160;
  font-weight: 500;
}


.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 6rpx solid #07C160;
}

.record-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.record-desc {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.record-amount {
  font-size: 28rpx;
  color: #FF6B35;
  font-weight: 500;
  flex-shrink: 0;
}

.record-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  flex-wrap: wrap;
  gap: 12rpx;
}

.record-type {
  background: #e8f5e8;
  color: #07C160;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.ai-feedback {
  margin-top: 12rpx;
  padding: 16rpx;
  background: #E8F5E8;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #07C160;
  border-left: 4rpx solid #07C160;
}